# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# SignalR Configuration
VITE_SIGNALR_URL=http://localhost:5000/hubs

# Authentication
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_USER_KEY=auth_user

# Application Settings
VITE_APP_NAME=CommHub
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VIDEO_CALL=false
VITE_ENABLE_VOICE_CALL=false

# Upload Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=image/*,.pdf,.doc,.docx,.xls,.xlsx,.txt,.zip

# Development Settings
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
