{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=collabsphere_dev;Username=postgres;Password=password123;Pooling=true;"
  },
  "Application": {
    "Environment": "Development",
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableCors": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3001",
      "http://127.0.0.1:3000",
      "https://127.0.0.1:3000"
    ]
  },
  "FileUpload": {
    "UseLocalStorage": true,
    "LocalStoragePath": "wwwroot/uploads"
  },
  "Testing": {
    "UseInMemoryDatabase": false,
    "SeedTestData": true
  },
  "SignalR": {
    "EnableDetailedErrors": true
  }
}