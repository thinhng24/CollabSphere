{
  "UseRabbitMQ": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore.SignalR": "Debug",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{ServiceName}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CommunicationModule_Notifications;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "CommunicationModule",
    "Audience": "CommunicationModuleUsers",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:5173",
    "http://localhost:5000"
  ],
  "Port": 5004,
  "ServiceSettings": {
    "AuthServiceUrl": "http://localhost:5001",
    "ChatServiceUrl": "http://localhost:5002",
    "DocumentServiceUrl": "http://localhost:5003"
  },
  "SignalR": {
    "EnableDetailedErrors": true,
    "MaximumReceiveMessageSize": 32768,
    "KeepAliveInterval": 15,
    "ClientTimeoutInterval": 30
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "communication_event_bus",
    "QueueName": "notification_service_queue",
    "RetryCount": 5
  },
  "PushNotifications": {
    "VapidPublicKey": "",
    "VapidPrivateKey": "",
    "VapidSubject": "mailto:admin@example.com"
  },
  "EmailSettings": {
    "SmtpHost": "localhost",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "notifications@example.com",
    "FromName": "Communication Module"
  },
  "NotificationSettings": {
    "DefaultExpirationHours": 168,
    "MaxNotificationsPerUser": 1000,
    "CleanupIntervalMinutes": 60,
    "RetentionDays": 30,
    "MaxPushFailures": 5
  },
  "AllowedHosts": "*"
}
