# Database Configuration
# REQUIRED: Set a strong password for PostgreSQL
POSTGRES_DB=projectdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# JWT Configuration
# REQUIRED: Generate a strong random secret (minimum 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
JWT_ISSUER=CollabSphere
JWT_AUDIENCE=CollabSphereUsers
JWT_EXPIRY_MINUTES=60

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379

# RabbitMQ Configuration
# REQUIRED: Set a strong password for RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# AWS Configuration (for Bedrock AI)
# REQUIRED: Set your AWS credentials for Bedrock AI integration
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here

# Cloudinary Configuration (for file storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Frontend Configuration
REACT_APP_API_GATEWAY_URL=http://localhost:5000
