# ==================== CommHub Environment Configuration ====================
# Copy this file to .env and update the values as needed

# ==================== General ====================
COMPOSE_PROJECT_NAME=commhub
ENVIRONMENT=development

# ==================== SQL Server ====================
MSSQL_SA_PASSWORD=CommHub@2024!
MSSQL_PID=Express
MSSQL_DATABASE=CommHub

# Full connection string (used by backend)
CONNECTION_STRING=Server=sqlserver;Database=CommHub;User Id=sa;Password=CommHub@2024!;TrustServerCertificate=True;MultipleActiveResultSets=true

# ==================== JWT Authentication ====================
JWT_SECRET_KEY=CommHubSuperSecretKeyForJwtAuthentication2024!MinLength32Chars
JWT_ISSUER=CommHub
JWT_AUDIENCE=CommHub
JWT_EXPIRY_MINUTES=1440

# ==================== RabbitMQ ====================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== Backend API ====================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
BACKEND_PORT=5000

# File Storage
FILE_STORAGE_PATH=/app/uploads
MAX_FILE_SIZE_BYTES=52428800

# Logging
LOG_LEVEL=Information
SIGNALR_LOG_LEVEL=Debug

# ==================== Frontend ====================
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api
VITE_SIGNALR_URL=http://localhost:5000/hubs
VITE_APP_NAME=CommHub
VITE_DEBUG_MODE=true

# Frontend port (mapped to nginx port 80 internally)
FRONTEND_PORT=3000

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:80

# ==================== Optional Services ====================
# Seq (Structured Logging)
SEQ_PORT=5341
SEQ_API_KEY=

# MailHog (Email Testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# Adminer (Database UI)
ADMINER_PORT=8080

# ==================== Production Overrides ====================
# Uncomment and modify for production deployments

# ENVIRONMENT=production
# ASPNETCORE_ENVIRONMENT=Production
# JWT_SECRET_KEY=<generate-a-strong-secret-key>
# MSSQL_SA_PASSWORD=<strong-production-password>
# RABBITMQ_PASSWORD=<strong-production-password>
# REDIS_PASSWORD=<strong-production-password>
# VITE_DEBUG_MODE=false
# LOG_LEVEL=Warning
