# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy solution file
COPY ["ProjectManagementApp.sln", "./"]

# Copy all project files
COPY ["Backend/shared/SharedKernel/SharedKernel.csproj", "Backend/shared/SharedKernel/"]
COPY ["Backend/gateway/Gateway.csproj", "Backend/gateway/"]
COPY ["Backend/services/ProjectService/ProjectService.Domain/ProjectService.Domain.csproj", "Backend/services/ProjectService/ProjectService.Domain/"]
COPY ["Backend/services/ProjectService/ProjectService.Application/ProjectService.Application.csproj", "Backend/services/ProjectService/ProjectService.Application/"]
COPY ["Backend/services/ProjectService/ProjectService.Infrastructure/ProjectService.Infrastructure.csproj", "Backend/services/ProjectService/ProjectService.Infrastructure/"]
COPY ["Backend/services/ProjectService/ProjectService.API/ProjectService.API.csproj", "Backend/services/ProjectService/ProjectService.API/"]

# Restore dependencies
RUN dotnet restore "Backend/services/ProjectService/ProjectService.API/ProjectService.API.csproj"

# Copy all source code
COPY . .

# Build the ProjectService.API
WORKDIR "/src/Backend/services/ProjectService/ProjectService.API"
RUN dotnet build "ProjectService.API.csproj" -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish "ProjectService.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Final stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
EXPOSE 80
EXPOSE 443

COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ProjectService.API.dll"]
